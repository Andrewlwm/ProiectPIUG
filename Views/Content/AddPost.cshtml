@model ClonaTwitter.Models.PostModel

@{
    ViewData["Title"] = "Make post";
}

<br />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddPost">
            <h1 class="text-center">Create post</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaUrl" class="control-label"></label>
                <input asp-for="MediaUrl" class="form-control" />
                <span asp-validation-for="MediaUrl" class="text-danger"></span>
                <small class="form-text text-muted">It's up to you to make sure your media URLs are correct.</small>
                <small class="form-text text-muted">Any image URL will work, for videos only youtube URLs will work.</small>
            </div>
            <div class="form-group">
                <label asp-for="PostBody" class="control-label"></label>
                <textarea asp-for="PostBody" class="form-control" rows="6"></textarea>
                <span asp-validation-for="PostBody" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Post" class="btn btn-outline-primary" style="width:200px" />
            </div>
        </form>
    </div>
</div>


