<ul class="navbar-nav">
    @if (User != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="btn btn-link text-light" asp-controller="Content" asp-action="ViewProfile" asp-route-profileName="@User.Identity.Name">Hello @User.Identity.Name!</a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button class="btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-link text-light" asp-controller="Account" asp-action="SignUp">Sign up</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-link text-light" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    }
</ul>